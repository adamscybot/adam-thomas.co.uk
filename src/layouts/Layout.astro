---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import {
  SITE_TITLE,
  SITE_DESCRIPTION,
  BehaviourAttributes,
  asProp,
} from '../consts'
import { css } from '../styled-system/css'
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class={css({
      maxW: '4xl',
      px: '7',
      py: '20',
      mx: 'auto',
      bg: 'bg',
      overflowY: 'scroll',
      xxs: {},
      xs: {
        px: '10',
      },
      xl: {
        maxW: '3xl',
        px: '10',
      },
      '2xl': {
        maxW: '4xl',
      },
    })}
  >
    <noscript>
      {
        /*
         * Using a marker div here for JS off as a trick to be able to use it as a selector in panda.
         */
      }
      <div data-javascript-disabled style={{ display: 'none' }}></div>
    </noscript>
    <Header
      {...Astro.slots.has('sub-nav')
        ? asProp(BehaviourAttributes.PRIMARY_HEADER_HAS_SUB_NAV)
        : {}}
    >
      <slot name="sub-nav" slot="sub-nav" />

      <main class={css({ mt: '12', position: 'relative' })}>
        <slot />
      </main>
    </Header>

    <Footer />
  </body>
</html>
